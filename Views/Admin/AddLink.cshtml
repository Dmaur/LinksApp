@model LinksApp.Models.LinkCatModel;

<div class="container">
   <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>_ADMIN.add link</h1>
        <form method="post" asp-action="logout" asp-controller="LogIn">
             <button type="submit" class="btn btn-warning">Log out</button>
        </form>
     
    </div>

    <form method="post" asp-action="submitlink" asp-controller="Admin">

        <!-- Category Header with the same width as input fields -->
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="btn-warning form-control">
                    <h3>Category: @Model.catModel.name</h3>
                </div>
            </div>
        </div>

        <!-- Text Input -->
        <div class="mb-3 mt-10 row">
            <div class="col-md-6">
                <label for="textInput" class="form-label">Link label</label>
                <input type="text" asp-for="@Model.linkModel.label" class="form-control" id="textInput"
                    placeholder="Enter label here">
                <span asp-validation-for="@Model.linkModel.label" class="text-warning"></span>
            </div>
        </div>

        <!-- URL Input -->
        <div class="mb-3 row">
            <div class="col-md-6">
                <label for="urlInput" class="form-label">URL</label>
                <input type="url" asp-for="@Model.linkModel.link" class="form-control" id="urlInput"
                    placeholder="https://example.com">
                <span asp-validation-for="@Model.linkModel.link" class="text-warning"></span>
            </div>
        </div>

        <!-- Checkbox -->
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" asp-for="@Model.linkModel.pinned" yid="checkBox">
            <label class="form-check-label" for="checkBox">Pin this link</label>
        </div>
        <input type="hidden" value="@Model.linkModel.category_id" asp-for="@Model.linkModel.category_id">

        <!-- Submit and Cancel Buttons beside each other -->
        <div class="d-flex">
            <button type="submit" class="btn btn-primary mx-1" >Submit</button>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-warning mx-1">Cancel</a>
        </div>

    </form>
</div>
