@model LinksApp.Models.LinkModel;
<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>_ADMIN.delete link</h1>
        <form method="post" asp-action="logout" asp-controller="LogIn">
             <button type="submit" class="btn btn-warning">Log out</button>
        </form>
    </div>
    <span id="lblExpire" class="text-warning" style="margin-left:10px"></span>

    <form method="post" asp-controller="Admin" asp-action="DelSubmit">
      
        <h6 class="text-black">Are you sure you want to delete this link?</h6>
        <a class="text-black" target="_blank" href="@Model.link">@Model.link | @Model.label</a>
        <input type="hidden" value="@Model.id" name="id">


        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-danger mx-1">Delete!</button>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-warning mx-1">Cancel</a>
        </div>

    </form>



   
</div>
